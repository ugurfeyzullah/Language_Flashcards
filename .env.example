# Environment Configuration for Language Flash Cards

# Development Environment
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production
PORT=5000
DATABASE_URL=sqlite:///flashcards.db

# Production Environment (uncomment for production)
# DEBUG=False
# SECRET_KEY=your-production-secret-key-here
# PORT=5000
# DATABASE_URL=postgresql://user:password@localhost/flashcards

# Session Configuration
PERMANENT_SESSION_LIFETIME_DAYS=30

# Security Headers
SECURITY_HEADERS=True

# CORS Settings
CORS_ORIGINS=*

# Database Settings
SQLALCHEMY_TRACK_MODIFICATIONS=False

# File Upload Settings (if needed later)
MAX_CONTENT_LENGTH=16777216  # 16MB

# Logging Configuration
LOG_LEVEL=INFO

# Browser Settings
NO_BROWSER=False  # Set to True to prevent auto-opening browser
